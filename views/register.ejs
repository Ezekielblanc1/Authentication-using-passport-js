<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="tex-center mb-3"><i class="fas fa-user-plus"></i>Register</h1>
      <form action="/user/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter name" value="<%= typeof name !='undefined' ? name: ''%>"/>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" value="<%= typeof email !='undefined' ? email: ''%>"/>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" value="<%= typeof password !='undefined' ? password: ''%>"/>
        </div>
        <div class="form-group">
          <label for="password2">Confirm password</label>
          <input type="password" id="password2" name="name" class="form-control" placeholder="Confirm Password" value="<%= typeof password !='undefined' ? password: ''%>"/>
        </div>
        <button type="submit" class="btn btn-primary btn-block">login</button>
      </form>
      <p class="lead mt-4">Have an Account? <a href="/user/login">Login</a></p>
    </div>
  </div>
</div>